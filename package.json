{
	"name": "codetogether",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"classnames": "^2.2.6",
		"lodash": "^4.17.11",
		"node-sass": "^4.9.3",
		"prop-types": "^15.6.2",
		"react": "^16.5.2",
		"react-dom": "^16.5.2",
		"react-event-listener": "^0.6.4",
		"react-media": "^1.8.0",
		"react-scripts": "2.0.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"storybook": "start-storybook -p 9009 -s public",
		"build-storybook": "build-storybook -o .codetogether-styleguide && cp -r static/* .codetogether-styleguide/_static"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.scss": [
			"stylelint --fix",
			"git add"
		]
	},
	"devDependencies": {
		"@storybook/addon-actions": "^3.4.11",
		"@storybook/addon-knobs": "^3.4.11",
		"@storybook/addon-links": "^3.4.11",
		"@storybook/addon-options": "^3.4.11",
		"@storybook/addons": "^3.4.11",
		"@storybook/react": "^3.4.11",
		"babel-core": "^6.26.3",
		"babel-runtime": "^6.26.0",
		"css-loader": "^1.0.0",
		"eslint-config-prettier": "^3.1.0",
		"eslint-plugin-prettier": "^3.0.0",
		"husky": "^1.2.1",
		"lint-staged": "^8.1.0",
		"prettier": "^1.14.3",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.0",
		"stylelint": "^9.7.1",
		"stylelint-config-property-sort-order-smacss": "^4.0.1",
		"stylelint-config-standard": "^18.2.0"
	}
}
